
@{
	ViewBag.Title = "DatosPersonales";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Historia Clinica</h2>
<br />
<div class="accordion" id="accordionHistoriaClinica">
    <div class="card">
        <div class="card-header" id="headingDatosPersonales">
            <h3 class="mb-0">
                <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#datosPersonales" aria-expanded="false" aria-controls="datosPersonales">
                    Datos Personales
                </button>
            </h3>
        </div>

        <div id="datosPersonales" class="collapse" aria-labelledby="headingDatosPersonales" data-parent="#accordionHistoriaClinica">
            <div class="card-body">
                <div class="text-right">
                    <p><label>Nº Historia Clinica</label></p>
                    <input style="text-align:left; border-radius:0.3rem; width:250px; height:40px;" />
                </div>
                <br />
                <div class="row">
                    <div class="col-xl-6">
                        <p>
                            <label>Nombre Completo</label>
                            <br />
                            <input class="col-xl" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
                        </p>
                    </div>
                    <div class="col-xl-3">
                        <p>
                            <label>Cedula</label>
                            <br />
                            <input class="col-xl" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
                        </p>
                    </div>
                    <div class="col-xl-2">
                        <p>
                            <label>Fecha de nacimiento</label>
                            <br />
                            <input type="date" class="col-xl" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
                        </p>
                    </div>
                    <div class="col-xl-1">
                        <p>
                            <label>Edad</label>
                            <br />
                            <input class="col-xl" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-3">
                        <p>
                            <label>Lugar de Nacimiento</label>
                            <br />
                            <input class="col-xl" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
                        </p>
                    </div>
                    <div class="col-xl-3">
                        <p>
                            <label>Etnia</label>
                            <br />
                            <input class="col-xl" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
                        </p>
                    </div>
                    <div class="col-xl-2">
                        <p>
                            <label>Genero</label>
                            <br />
                            <input class="col-xl" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
                        </p>
                    </div>
                    <div class="col-xl-2">
                        <p>
                            <label>Estado Civil</label>
                            <br />
                            <input class="col-xl" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
                        </p>
                    </div>
                    <div class="col-xl-2">
                        <p>
                            <label>Tipo de Sangre</label>
                            <br />
                            <input class="col-xl" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-header" id="headingAntecedentes">
            <h3 class="mb-0">
                <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#antecedentes" aria-expanded="false" aria-controls="antecedentes">
                    Antecedentes
                </button>
            </h3>
        </div>

        <div id="antecedentes" class="collapse" aria-labelledby="headingAntecedentes" data-parent="#accordionHistoriaClinica">
            <form>
                <label>Personales</label>
                <textarea class="col-xl-12" style="text-align:left; border-radius:0.3rem; width:100%; height:100%;" rows="4" cols="10"></textarea>
                <br />
                <br />
                <label>Familiares</label>
                <textarea class="col-xl-12" style="text-align:left; border-radius:0.3rem; width:100%; height:100%;" rows="4" cols="10"></textarea>
                <br />
                <br />
                <label>Sociales</label>
                <textarea class="col-xl-12" style="text-align:left; border-radius:0.3rem; width:100%; height:100%;" rows="4" cols="10"></textarea>
                <br />
                <br />
                <label>Habitos</label>
                <textarea class="col-xl-12" style="text-align:left; border-radius:0.3rem; width:100%; height:100%;" rows="4" cols="10"></textarea>
            </form>
        </div>

        <div class="card-header" id="headingSignosVitales">
            <h3 class="mb-0">
                <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#signosVitales" aria-expanded="false" aria-controls="signosVitales">
                    Signos Vitales
                </button>
            </h3>
        </div>

        <div id="signosVitales" class="collapse" aria-labelledby="headingSignosVitales" data-parent="#accordionHistoriaClinica">
            <div class="table-responsive">
                <table class="table">
                    <tr>
                        <th scope="col">Fecha</th>
                        <th scope="col">Temperatura</th>
                        <th scope="col">Precion Arterial</th>
                        <th scope="col">FT</th>
                        <th scope="col">FC</th>
                        <th scope="col">Peso</th>
                        <th scope="col">Talla</th>
                        <th scope="col">Saturación</th>
                    </tr>
                    <tr>
                        <td>99</td>
                        <td>99</td>
                        <td>99</td>
                        <td>99</td>
                        <td>99</td>
                        <td>99</td>
                        <td>99</td>
                        <td>99</td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="card-header" id="headingConsulta">
            <h3 class="mb-0">
                <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#consulta" aria-expanded="false" aria-controls="consulta">
                    Consulta
                </button>
            </h3>
        </div>

        <div id="consulta" class="collapse" aria-labelledby="headingConsulta" data-parent="#accordionHistoriaClinica">
            <form>
                <label>Motivo de colsulta</label>
                <textarea class="col-xl-12" style="text-align:left; border-radius:0.3rem; width:100%; height:100%;" rows="2" cols="10"></textarea>
                <br />
                <label>Enfermedad Actual</label>
                <textarea class="col-xl-12" style="text-align:left; border-radius:0.3rem; width:100%; height:100%;" rows="4" cols="10"></textarea>
                <br />
                <label>Revisión del Sistema</label>
                <textarea class="col-xl-12" style="text-align:left; border-radius:0.3rem; width:100%; height:100%;" rows="4" cols="10"></textarea>
                <br />
                <label>Examen Físico</label>
                <textarea class="col-xl-12" style="text-align:left; border-radius:0.3rem; width:100%; height:100%;" rows="4" cols="10"></textarea>
            </form>
        </div>

        <div class="card-header" id="headingDiagnostico">
            <h3 class="mb-0">
                <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#diagnostico" aria-expanded="false" aria-controls="diagnostico">
                    Diagnostico
                </button>
            </h3>
        </div>

        <div id="diagnostico" class="collapse" aria-labelledby="headingDiagnostico" data-parent="#accordionHistoriaClinica">
            <form>
                <div class="row">
                    <div class="col-xl-6">
                        <label>Enfermedad</label>
                        <br />
                        <input name="EnfermedadDiagnostico" class="col-xl" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
                    </div>
                    <div class="col-xl-1">
                        <label>CIE-10</label>
                        <br />
                        <input name="CIE10Diagnostico" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
                    </div>
                    <div class="col-xl-2">
                        <label>Tipo</label>
                        <br />
                        <select style="text-align:left; border-radius:0.3rem; width:100%; height:40px;">
                            <option> ----- </option>
                            <option> Definitivo </option>
                            <option> Presuntivo </option>
                        </select>
                    </div>
                    <div class="col-xl-3">
                        <label>Reposo</label>
                        <br />
                        <input name="ReposoDiagnostico" style="text-align:left; border-radius:0.3rem; width:150px; height:40px;" />
                        <label>días</label>
                    </div>
                </div>
                <br />
                <div class="text-center">
                    <button style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.3rem; width:200px; height:40px; cursor: pointer">Ingresar</button>
                </div>

                <br />
                <div class="table-responsive">
                    <table class="table">
                        <tr>
                            <th scope="col">Enfermedad</th>
                            <th scope="col">CIE-10</th>
                            <th scope="col">Tipo</th>
                            <th scope="col">Reposo</th>
                            <th scope="col"></th>
                        </tr>
                        <tr>
                            <td>AAAA</td>
                            <td>AA99</td>
                            <td>AAAA</td>
                            <td>000</td>
                            <td>
                                <button style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.3rem; width:200px; height:40px; cursor: pointer">Certificado</button>
                            </td>
                        </tr>
                    </table>
                </div>
                <br />
                <label>Tratamiento</label>
                <textarea class="col-xl-12" style="text-align:left; border-radius:0.3rem; width:100%; height:100%;" rows="4" cols="10"></textarea>
            </form>
        </div>
    </div>
</div>

