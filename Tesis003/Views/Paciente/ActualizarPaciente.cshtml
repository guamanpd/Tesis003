@model Tesis003.Models.PacienteModel
@{
	ViewBag.Title = "ActualizarPaciente";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Actualizar Paciente</h2>

<form id="ActualizarPaciente" action="ActualizarPacienteProceso" method="post">
    <input name="Identificador" value="@Model.identificador" class="required" style="text-align:left; border-radius:0.3rem; width:200px; height:40px;" hidden />

    <div class="text-right">
        <p>
            <label>Nº Historia Clinica</label>
            <br />
            <input name="NumHistoriaClinica" value="@Model.numHistoriaClinica" class="required" style="text-align:left; border-radius:0.3rem; width:200px; height:40px;" disabled />
        </p>
    </div>

    <div class="row">
        <div class="col-xl-9">
            <p>
                <label>Nombre Completo</label>
                <input class="col-xl required" name="NombreCompleto" placeholder=" NOMBRES APELLIDOS" style="text-transform: uppercase; text-align:left; border-radius:0.3rem; width:100%; height:40px;" value="@Model.nombreCompleto" />
            </p>
        </div>
        <div class="col-xl-3">
            <p>
                <label>Cedula</label>
                <br />
                <input id="Cedula" name="Cedula" class="required number" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" value="@Model.cedula" />
                <label id="salida" name="ValidacionCedula" />
            </p>
        </div>
    </div>

    <div class="row">

        <div class="col-xl-6">
            <p>
                <label>Direccion</label>
                <br />
                <input name="Direccion" class="col-xl required" style="text-transform: uppercase; text-align:left; border-radius:0.3rem; width:100%; height:40px;" value="@Model.direccion">
            </p>
        </div>
        <div class="col-xl-3">
            <p>
                <label>Telefono</label>
                <br />
                <input name="Telefono" class="required number" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" value="@Model.telefono"/>
            </p>
        </div>
        <div class="col-xl-3">
            <p>
                <label>Fecha de Nacimiento</label>
                <br />
                <input name="FechaNacimiento" class="required" type="date" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" value="@Model.fechaNacimiento.ToString("yyyy-MM-dd")"/>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-3">
            <p>
                <label>Etnia</label>
                <br>
                <select name="Etnia" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;">
                    <option> ----- </option>
                    @{
                        var etnias = ViewData["etnias"] as List<Tesis003.Models.ParametroModel>;
                        foreach (var etnia in etnias)
                        {
                            if (etnia.identificador == Model.etnia)
                            {
                                <option value="@etnia.identificador" selected>@etnia.valor</option>
                            }
                            else
                            {
                                <option value="@etnia.identificador">@etnia.valor</option>
                            }

                        }
                    }
                </select>
            </p>
        </div>
        <div class="col-xl-3">
            <p>
                <label>Genero</label>
                <br>
                <select name="Sexo" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;">
                    <option> ----- </option>
                    @{
                        var generos = ViewData["generos"] as List<Tesis003.Models.ParametroModel>;
                        foreach (var genero in generos)
                        {
                            if (genero.identificador == Model.sexo)
                            {
                                <option value="@genero.identificador" selected>@genero.valor</option>
                            }
                            else
                            {
                                <option value="@genero.identificador">@genero.valor</option>
                            }
                        }
                    }
                </select>
            </p>
        </div>
        <div class="col-md-3">
            <p>
                <label>Estado Civil</label>
                <br />
                <select name="EstadoCivil" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;">
                    <option> ----- </option>
                    @{
                        var estados = ViewData["estados"] as List<Tesis003.Models.ParametroModel>;
                        foreach (var estado in estados)
                        {
                            if (estado.identificador == Model.estadoCivil)
                            {
                                <option value="@estado.identificador" selected>@estado.valor</option>
                            }
                            else
                            {
                                <option value="@estado.identificador">@estado.valor</option>
                            }
                        }
                    }
                </select>
            </p>
        </div>
        <div class="col-md-3">
            <p>
                <label>Tipo de Sangre</label>
                <br />
                <select name="TipoSangre" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;">
                    <option> ----- </option>
                    @{
                        var tipos = ViewData["tipos"] as List<Tesis003.Models.ParametroModel>;
                        foreach (var tipo in tipos)
                        {
                            if (tipo.identificador == Model.tipoSangre)
                            {
                                <option value="@tipo.identificador" selected>@tipo.valor</option>
                            }
                            else
                            {
                                <option value="@tipo.identificador">@tipo.valor</option>
                            }
                        }
                    }
                </select>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-6">
            <p>
                <label>Contacto de Emergencia</label>
                <br />
                <input name="NombreContactoEmergencia" class="required" style="text-transform: uppercase; text-align:left; border-radius:0.3rem; width:100%; height:40px;" value="@Model.nombreContactoEmergencia" />
            </p>
        </div>
        <div class="col-xl-3">
            <p>
                <label>Afinidad</label>
                <input name="AfinidadContactoEmergencia" class="required" style="text-transform: uppercase; text-align:left; border-radius:0.3rem; width:100%; height:40px;" value="@Model.afinidadContactoEmergencia" />
            </p>
        </div>
        <div class="col-xl-3">
            <p>
                <label>Telefono</label>
                <input name="TelefonoContactoEmergencia" class="required" style="text-transform: uppercase; text-align:left; border-radius:0.3rem; width:100%; height:40px;" value="@Model.telefonoContactoEmergencia" />
            </p>
        </div>
    </div>

    <div class="text-center">
        <br />
        <button style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.3rem; width:200px; height:40px; cursor: pointer" type="submit" onclick="validarFormulario()">GUARDAR</button>
    </div>
</form>
