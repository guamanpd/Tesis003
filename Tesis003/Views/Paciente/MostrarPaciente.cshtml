@model Tesis003.Models.PacienteModel
@{
    ViewBag.Title = "MostrarPaciente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Mostrar Paciente</h2>


<div class="text-right">
    <p>
        <label>Nº Historia Clinica</label>
        <br />
        <input name="NumHistoriaClinica" value="@Model.numHistoriaClinica" class="required" style="text-align:left; border-radius:0.3rem; width:200px; height:40px;" disabled />
    </p>
</div>

<div class="row">
    <div class="col-xl-9">
        <p>
            <label>Nombre Completo</label>
            <input class="col-xl required" name="NombreCompleto" placeholder=" NOMBRES APELLIDOS" style="text-transform: uppercase; text-align:left; border-radius:0.3rem; width:100%; height:40px;" value="@Model.nombreCompleto" disabled/>
        </p>
    </div>
    <div class="col-xl-3">
        <p>
            <label>Cedula</label>
            <br />
            <input id="Cedula" name="Cedula" class="required number" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" value="@Model.cedula" disabled />
        </p>
    </div>
</div>

<div class="row">

    <div class="col-xl-6">
        <p>
            <label>Direccion</label>
            <br />
            <input name="Direccion" class="col-xl required" style="text-transform: uppercase; text-align:left; border-radius:0.3rem; width:100%; height:40px;" value="@Model.direccion" disabled />
        </p>
    </div>
    <div class="col-xl-3">
        <p>
            <label>Telefono</label>
            <br />
            <input name="Telefono" class="required number" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" value="@Model.telefono" disabled/>
        </p>
    </div>
    <div class="col-xl-3">
        <p>
            <label>Fecha de Nacimiento</label>
            <br />
            <input name="FechaNacimiento" class="required" type="date" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" value="@Model.fechaNacimiento.ToString("yyyy-MM-dd")" disabled />
        </p>
    </div>
</div>
<div class="row">
    <div class="col-xl-3">
        <p>
            <label>Etnia</label>
            <br>
            <select name="Etnia" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" disabled>
                @{
                    var etnias = ViewData["etnias"] as List<Tesis003.Models.ParametroModel>;
                    foreach (var etnia in etnias)
                    {
                        if (etnia.identificador == Model.etnia)
                        {
                            <option value="@etnia.identificador">@etnia.valor</option>
                        }
                    }
                }
            </select>
        </p>
    </div>
    <div class="col-xl-3">
        <p>
            <label>Genero</label>
            <br>
            <select name="Sexo" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" disabled>
                @{
                    var generos = ViewData["generos"] as List<Tesis003.Models.ParametroModel>;
                    foreach (var genero in generos)
                    {
                        if (genero.identificador == Model.sexo)
                        {
                            <option value="@genero.identificador">@genero.valor</option>
                        }
                    }
                }
            </select>
        </p>
    </div>
    <div class="col-md-3">
        <p>
            <label>Estado Civil</label>
            <br />
            <select name="EstadoCivil" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" disabled>
                @{
                    var estados = ViewData["estados"] as List<Tesis003.Models.ParametroModel>;
                    foreach (var estado in estados)
                    {
                        if (estado.identificador == Model.estadoCivil)
                        {
                            <option value="@estado.identificador">@estado.valor</option>
                        }

                    }
                }
            </select>
        </p>
    </div>
    <div class="col-md-3">
        <p>
            <label>Tipo de Sangre</label>
            <br />
            <select name="TipoSangre" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" disabled>
                @{
                    var tipos = ViewData["tipos"] as List<Tesis003.Models.ParametroModel>;
                    foreach (var tipo in tipos)
                    {
                        if (tipo.identificador == Model.tipoSangre)
                        {
                            <option value="@tipo.identificador">@tipo.valor</option>
                        }

                    }
                }
            </select>
        </p>
    </div>
</div>
<div class="row">
    <div class="col-xl-6">
        <p>
            <label>Contacto de Emergencia</label>
            <br />
            <input name="NombreContactoEmergencia" class="required" style="text-transform: uppercase; text-align:left; border-radius:0.3rem; width:100%; height:40px;" value="@Model.nombreContactoEmergencia" disabled/>
        </p>
    </div>
    <div class="col-xl-3">
        <p>
            <label>Afinidad</label>
            <input name="AfinidadContactoEmergencia" class="required" style="text-transform: uppercase; text-align:left; border-radius:0.3rem; width:100%; height:40px;" value="@Model.afinidadContactoEmergencia" disabled/>
        </p>
    </div>
    <div class="col-xl-3">
        <p>
            <label>Telefono</label>
            <input name="TelefonoContactoEmergencia" class="required" style="text-transform: uppercase; text-align:left; border-radius:0.3rem; width:100%; height:40px;" value="@Model.telefonoContactoEmergencia" disabled/>
        </p>
    </div>
</div>

<div class="text-center">
    <div class="row">
        <div class="col-xl-6">
            <form id="ActualizarPaciente" action="ActualizarPaciente" method="post">
                <button name="Identificador" value="@Model.identificador" style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.3rem; width:200px; height:40px; cursor: pointer" type="submit">ACTUALIZAR</button>
            </form>
        </div>
        <div class="col-xl-6">
            <form id="IngresarCita" action="../Cita/IngresarCita" method="post">
                <button name="IdentificadorPaciente" value="@Model.identificador" style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.3rem; width:200px; height:40px; cursor: pointer" type="submit">INGRESAR CITA</button>
            </form>
        </div>
    </div>
</div>
