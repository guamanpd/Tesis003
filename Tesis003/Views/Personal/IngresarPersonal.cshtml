@using Tesis003.Models
@model Tesis003.Models.PersonalModel
@{
    ViewBag.Title = "IngresarPersonal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Ingreso Personal</h2>
<br />
<form id="IngresarPersonal" action="IngresarPersonal" method="post">
    <div class="row">
        <div class="col-xl-6">
            <p>
                <label>Nombre Completo</label>
                <br />
                <input name="Nombre" class="col-xl required" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" value="@(Model!=null ? Model.nombre : string.Empty)"/>
            </p>
        </div>
        <div class="col-xl-3">
            <p>
                <label>Cedula</label>
                <br />
                <input id="Cedula" name="Cedula" class="col-xl required number" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" value="@(Model!=null ? Model.cedula : string.Empty)"/>
                <label id="salida" name="ValidacionCedula" />
            </p>
        </div>
        <div class="col-xl-3">
            <p>
                <label>Telefono</label>
                <br />
                <input name="Telefono" class="col-xl required number" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" value="@(Model!=null ? Model.telefono : string.Empty)"/>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-3">
            <p>
                <label>Cargo</label>
                <br />
                <select name="Cargo" class="col-xl required" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;">
                    <option> ----- </option>
                    @{
                        var cargos = ViewData["cargos"] as List<Tesis003.Models.ParametroModel>;
                        foreach (var cargo in cargos)
                        {
                            if (Model != null && Model.cargo==cargo.identificador)
                            {
                                <option value="@cargo.identificador" selected>@cargo.valor</option>
                            }
                            {
                                <option value="@cargo.identificador">@cargo.valor</option>
                            }
                        }
                    }
                </select>
            </p>
        </div>
        <div class="col-xl-3">
            <p>
                <label>Usuario</label>
                <br />
                <input name="usuario" class="col-xl required" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" value="@(Model!=null ? Model.usuario : string.Empty)"/>
            </p>
        </div>
        <div class="col-xl-3">
            <p>
                <label>Contraseña</label>
                <br />
                <input type="password" name="contrasena" class="col-xl required" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" value="@(Model!=null ? Model.contrasena : string.Empty)" />
            </p>
        </div>
    </div>
    <br />
    <div class="text-center">
        <button name="btn" style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.3rem; width:200px; height:40px; cursor: pointer" type="submit" onclick="validarFormulario()">Ingresar Personal</button>
    </div>
</form>
<br />
<form id="IngresarServicioPersonal" action="Servicio" method="post">
    <div class="row">
        <div class="col-xl-6">
            <p>
                <label>Detalle</label>
                <br />
                <input name="NombreServicio" class="col-xl" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;">
            </p>
        </div>
        <div class="col-xl-3">
            <p>
                <label>Valor</label>
                <br />
                <input name="ValorServicio" class="col-xl required number" style="text-align:left; border-radius:0.3rem; width:100%; height:40px;" />
            </p>
        </div>
        <div class="col-xl-3">
            <p>
                <label></label>
                <br />
                <button name="Btn" value="ingresar" style="background-color:darkturquoise; border-bottom-color:darkturquoise;color:white; border-radius:0.3rem; width:200px; height:40px; cursor: pointer" type="submit" onclick="validarFormularioSimple()">Ingresar Servicio</button>
            </p>
        </div>
    </div>
    <div>
        <p>
            <table class="table">
                <tr>
                    <th scope="col">Detalle</th>
                    <th scope="col">Valor</th>
                </tr>
            </table>
        </p>
    </div>
</form>


